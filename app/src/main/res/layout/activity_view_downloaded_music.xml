<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    tools:context=".ViewDownloadedMusicActivity">


    <TextView
        android:id="@+id/tvTitleDownMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Downloaded Music"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="cursive"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewViewMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/tvTitleDownMusic">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Song Downloaded to: Files/Musics/Synarc"
        android:textSize="10sp"
        android:layout_below="@+id/tvTitleDownMusic"/>


</RelativeLayout>